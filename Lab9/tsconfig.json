{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "./src/js",
        "sourceMap": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./src/js"
    ]
}